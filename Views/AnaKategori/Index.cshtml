@model IEnumerable<MVCTekrar.Models.AnaKategori>

@{
    ViewBag.Title = "Ana Kategori";
}

<h2>Ana Kategori Listesi (Sihirbaz ile oluşturuldu)</h2>

<p>
    @Html.ActionLink("Yeni Kategori", "Create", "AnaKategori", new {@class = "btn btn-primary" }) 
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.KategoriAdi)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.KategoriAdi)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { item.KategoriId }) |
            @Html.ActionLink("Details", "Details", new { item.KategoriId }) |
            @Html.ActionLink("Delete", "Delete", new { item.KategoriId })
        </td>
    </tr>
}

</table>
